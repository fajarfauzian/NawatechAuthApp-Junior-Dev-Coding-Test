@page
@model NawatechAuthApp.Pages.Products.DetailsModel
@{
    ViewData["Title"] = "Product Details";
}

<h1>@ViewData["Title"]</h1>

<div>
    <div class="row mb-4">
        <div class="col-md-6">
            <dl class="row">
                <dt class="col-sm-4">Name</dt>
                <dd class="col-sm-8">@Model.Product.Name</dd>
                
                <dt class="col-sm-4">Description</dt>
                <dd class="col-sm-8">@(Model.Product.Description ?? "N/A")</dd>
                
                <dt class="col-sm-4">Price</dt>
                <dd class="col-sm-8">@Model.Product.Price.ToString("C")</dd>
                
                <dt class="col-sm-4">Stock</dt>
                <dd class="col-sm-8">@Model.Product.Stock</dd>
                
                <dt class="col-sm-4">Category</dt>
                <dd class="col-sm-8">@(Model.Product.Category?.Name ?? "N/A")</dd>
                
                <dt class="col-sm-4">Created At</dt>
                <dd class="col-sm-8">@Model.Product.CreatedAt.ToString("g")</dd>
                
                @if (Model.Product.UpdatedAt.HasValue)
                {
                    <dt class="col-sm-4">Last Updated</dt>
                    <dd class="col-sm-8">@Model.Product.UpdatedAt.Value.ToString("g")</dd>
                }
            </dl>
        </div>
        <div class="col-md-6">
            @if (!string.IsNullOrEmpty(Model.Product.ImageUrl))
            {
                <img src="@Model.Product.ImageUrl" alt="@Model.Product.Name" class="img-fluid" style="max-height: 300px;" />
            }
            else
            {
                <div class="text-muted">No image available</div>
            }
        </div>
    </div>
    
    <div>
        <a asp-page="./Edit" asp-route-id="@Model.Product.Id" class="btn btn-primary">Edit</a>
        <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>