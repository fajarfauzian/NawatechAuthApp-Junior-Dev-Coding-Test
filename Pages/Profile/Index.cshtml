@page
@model NawatechAuthApp.Pages.Profile.IndexModel
@{
    ViewData["Title"] = "Profile";
}

<div class="container-fluid pt-3">

    <!-- Main Content -->
    <div class="row g-4">
        <!-- Profile Picture Section -->
        <div class="col-lg-4 col-md-5">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center p-4">
                    <div class="position-relative d-inline-block mb-4">
                        @if (!string.IsNullOrEmpty(Model.ProfilePicture))
                        {
                            <img src="@Model.ProfilePicture" alt="Profile Picture" 
                                 class="rounded-circle border border-3 border-light shadow" 
                                 style="width: 150px; height: 150px; object-fit: cover;" />
                        }
                        else
                        {
                            <img src="@Model.GravatarUrl" alt="Gravatar Profile" 
                                 class="rounded-circle border border-3 border-light shadow" 
                                 style="width: 150px; height: 150px; object-fit: cover;" />
                        }
                        <div class="position-absolute bottom-0 end-0">
                            <span class="badge bg-primary rounded-pill p-2">
                                <i class="bi bi-camera-fill"></i>
                            </span>
                        </div>
                    </div>
                    
                    <h4 class="fw-bold mb-1">@Model.Username</h4>
                    <p class="text-muted mb-3">@Model.Email</p>
                    
                    <div class="d-grid gap-2 d-md-block">
                        <span class="badge bg-light text-dark px-3 py-2 rounded-pill">
                            <i class="bi bi-shield-check me-1"></i>
                            Verified Account
                        </span>
                    </div>
                </div>
            </div>
        </div>

 
        <!-- Profile Form Section -->
        <div class="col-lg-8 col-md-7">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-transparent border-0 pt-3 px-3">
                    <h5 class="mb-0 fw-bold">
                    <i class="bi bi-person-circle fs-3 text-primary"></i>
                        Manage your account information and settings
                    </h5>
                </div>
                <div class="card-body p-4">
                    <form id="profile-form" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger d-none"></div>
                        
                        <!-- Account Information (Read-only) -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <h6 class="text-muted text-uppercase fw-bold mb-3 border-bottom pb-2">
                                    <i class="bi bi-info-circle me-2"></i>Account Information
                                </h6>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-semibold">
                                    <i class="bi bi-person me-2 text-muted"></i>Username
                                </label>
                                <div class="input-group">
                                    <input class="form-control bg-light" readonly value="@Model.Username" />
                                    <span class="input-group-text bg-light border-start-0">
                                        <i class="bi bi-lock text-muted"></i>
                                    </span>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-semibold">
                                    <i class="bi bi-envelope me-2 text-muted"></i>Email Address
                                </label>
                                <div class="input-group">
                                    <input class="form-control bg-light" readonly value="@Model.Email" />
                                    <span class="input-group-text bg-light border-start-0">
                                        <i class="bi bi-lock text-muted"></i>
                                    </span>
                                </div>
                            </div>
                        </div>

                        <!-- Personal Information (Editable) -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <h6 class="text-muted text-uppercase fw-bold mb-3 border-bottom pb-2">
                                    <i class="bi bi-person-lines-fill me-2"></i>Personal Information
                                </h6>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Input.FirstName" class="form-label fw-semibold">
                                    <i class="bi bi-person me-2 text-muted"></i>First Name
                                </label>
                                <input asp-for="Input.FirstName" class="form-control form-control-lg border-2" 
                                       placeholder="Enter your first name" />
                                <span asp-validation-for="Input.FirstName" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Input.LastName" class="form-label fw-semibold">
                                    <i class="bi bi-person me-2 text-muted"></i>Last Name
                                </label>
                                <input asp-for="Input.LastName" class="form-control form-control-lg border-2" 
                                       placeholder="Enter your last name" />
                                <span asp-validation-for="Input.LastName" class="text-danger small"></span>
                            </div>
                        </div>

                        <!-- Profile Picture Upload -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <h6 class="text-muted text-uppercase fw-bold mb-3 border-bottom pb-2">
                                    <i class="bi bi-image me-2"></i>Profile Picture
                                </h6>
                                <div class="mb-3">
                                    <label asp-for="Input.ProfilePicture" class="form-label fw-semibold">
                                        <i class="bi bi-cloud-upload me-2 text-muted"></i>Upload Custom Picture
                                    </label>
                                    <input asp-for="Input.ProfilePicture" type="file" 
                                           class="form-control form-control-lg border-2" 
                                           accept="image/*" />
                                    <span asp-validation-for="Input.ProfilePicture" class="text-danger small"></span>
                                    <div class="form-text mt-2">
                                        <i class="bi bi-info-circle me-1"></i>
                                        Upload a custom image (JPG, PNG, GIF - Max 5MB) or leave empty to use your Gravatar profile picture
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="row">
                            <div class="col-12">
                                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                    <button type="button" class="btn btn-outline-secondary btn-lg px-4 me-md-2">
                                        <i class="bi bi-arrow-clockwise me-2"></i>Reset
                                    </button>
                                    <button type="submit" class="btn btn-primary btn-lg px-4">
                                        <i class="bi bi-check-circle me-2"></i>Save Changes
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Status Message -->
            @if (!string.IsNullOrEmpty(Model.StatusMessage))
            {
                <div class="mt-4">
                    <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
                        <i class="bi bi-check-circle-fill me-2"></i>
                        <strong>Success!</strong> @Model.StatusMessage
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}