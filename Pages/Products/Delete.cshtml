@page
@model NawatechAuthApp.Pages.Products.DeleteModel
@{
    ViewData["Title"] = "Delete Product";
}

<h1>@ViewData["Title"]</h1>

<div class="alert alert-danger">
    <h3>Are you sure you want to delete this product?</h3>
</div>

<div>
    <div class="row mb-4">
        <div class="col-md-6">
            <dl class="row">
                <dt class="col-sm-4">Name</dt>
                <dd class="col-sm-8">@Model.Product.Name</dd>
                
                <dt class="col-sm-4">Description</dt>
                <dd class="col-sm-8">@(Model.Product.Description ?? "N/A")</dd>
                
                <dt class="col-sm-4">Price</dt>
                <dd class="col-sm-8">@Model.Product.Price.ToString("C")</dd>
                
                <dt class="col-sm-4">Stock</dt>
                <dd class="col-sm-8">@Model.Product.Stock</dd>
                
                <dt class="col-sm-4">Category</dt>
                <dd class="col-sm-8">@(Model.Product.Category?.Name ?? "N/A")</dd>
            </dl>
        </div>
        <div class="col-md-6">
            @if (!string.IsNullOrEmpty(Model.Product.ImageUrl))
            {
                <img src="@Model.Product.ImageUrl" alt="@Model.Product.Name" class="img-fluid" style="max-height: 300px;" />
            }
        </div>
    </div>
    
    <form method="post">
        <input type="hidden" asp-for="Product.Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>