@page "{id:int}"
@model NawatechAuthApp.Pages.Categories.DetailsModel
@{
    ViewData["Title"] = "Category Details";
}

<div class="container py-4">
    @if (Model.Category != null)
    {
        <div class="card shadow-sm border-0 rounded-3">
            <div class="card-header bg-white border-bottom-0 pt-4">
                <h3 class="card-title mb-0">@Model.Category.Name</h3>
                <p class="text-muted small mb-0">Category Details</p>
            </div>
            <div class="card-body">
                <div class="row g-4">
                    <div class="col-lg-6">
                        <div class="p-4 bg-light rounded-3">
                            <div class="mb-3">
                                <label class="text-muted small">Name</label>
                                <p class="mb-0 fw-medium">@Model.Category.Name</p>
                            </div>
                            <div class="mb-3">
                                <label class="text-muted small">Description</label>
                                <p class="mb-0">@Model.Category.Description</p>
                            </div>
                            <div class="mb-3">
                                <label class="text-muted small">Created At</label>
                                <p class="mb-0">@Model.Category.CreatedAt.ToString("MMM dd, yyyy HH:mm")</p>
                            </div>
                            @if (Model.Category.UpdatedAt.HasValue)
                            {
                                <div>
                                    <label class="text-muted small">Updated At</label>
                                    <p class="mb-0">@Model.Category.UpdatedAt.Value.ToString("MMM dd, yyyy HH:mm")</p>
                                </div>
                            }
                        </div>
                    </div>
                    
                    <div class="col-lg-6">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h5 class="mb-0">Products</h5>
                            <span class="badge bg-primary rounded-pill">
                                @(Model.Category.Products?.Count() ?? 0)
                            </span>
                        </div>
                        
                        @if (Model.Category.Products != null && Model.Category.Products.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-hover align-middle">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Name</th>
                                            <th>Price</th>
                                            <th>Stock</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var product in Model.Category.Products)
                                        {
                                            <tr>
                                                <td>
                                                    <span class="fw-medium">@product.Name</span>
                                                </td>
                                                <td>
                                                    <span class="text-success fw-medium">@product.Price.ToString("C")</span>
                                                </td>
                                                <td>
                                                    <span class="badge bg-secondary">@product.Stock</span>
                                                </td>
                                                <td>
                                                    <a asp-page="/Products/Details" asp-route-id="@product.Id" 
                                                       class="btn btn-sm btn-outline-primary">
                                                        <i class="bi bi-eye"></i> View
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-5 text-muted">
                                <i class="bi bi-box h1"></i>
                                <p class="mt-2">No products found in this category</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="card-footer bg-white border-top-0 pb-4">
                <div class="d-flex gap-2">
                    <a asp-page="./Edit" asp-route-id="@Model.Category.Id" 
                       class="btn btn-primary">
                        <i class="bi bi-pencil"></i> Edit
                    </a>
                    <a asp-page="./Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Back
                    </a>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <div class="mb-4">
                <i class="bi bi-exclamation-circle text-danger" style="font-size: 3rem;"></i>
            </div>
            <h4>Category Not Found</h4>
            <p class="text-muted">The category you're looking for doesn't exist.</p>
            <a asp-page="./Index" class="btn btn-primary">
                <i class="bi bi-arrow-left"></i> Back to Categories
            </a>
        </div>
    }
</div>