@page
@model NawatechAuthApp.Areas.Identity.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Register";
}
<div class="container-fluid d-flex align-items-center justify-content-center p-0 bg-white">
    <div class="row w-100 mx-0 align-items-center justify-content-center" style="max-width: 1200px;">
        <!-- Left Side: Illustration -->
        <div class="col-lg-6 col-md-5 d-none d-md-flex align-items-center justify-content-center p-3">
            <div class="text-center">
                <img src="~/image/register.png" alt="Register Illustration" class="img-fluid mb-3 rounded" style="max-width: 100%; max-height: 700px; object-fit: contain;"/>
                <h3 class="text-dark fw-bold mb-2">Join Nawatech</h3>
                <p class="text-muted">Create your account today</p>
            </div>
        </div>
        
        <!-- Right Side: Register Form -->
        <div class="col-lg-6 col-md-7 col-12 d-flex align-items-center justify-content-center p-3">
            <div class="card border shadow w-100 rounded-4" style="max-width: 450px; border-color: #e9ecef !important;">
                <div class="card-body p-4">
                    <!-- Header -->
                    <div class="text-center mb-3">
                        <div class="d-inline-flex align-items-center justify-content-center rounded-circle mb-3 text-white" style="width: 60px; height: 60px; background: linear-gradient(135deg, #4A47EE, #764ba2);">
                            <i class="bi bi-person-plus-fill" style="font-size: 1.5rem;"></i>
                        </div>
                        <h4 class="fw-bold mb-2 text-dark">Create Account</h4>
                        <p class="text-muted mb-0 small">Join our community today</p>
                    </div>

                    <form id="registerForm" asp-route-returnUrl="@Model?.ReturnUrl" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-pill py-2 px-3 small" role="alert"></div>
                        
                        <!-- First Name Input -->
                        <div class="mb-3">
                            <label asp-for="Input.FirstName" class="form-label fw-semibold text-dark small">
                                <i class="bi bi-person me-2" style="color: #4A47EE;"></i>First Name
                            </label>
                            <input asp-for="Input.FirstName" class="form-control rounded-pill px-3 border-2" 
                                   autocomplete="firstname" aria-required="true" 
                                   placeholder="Enter your first name"/>
                            <span asp-validation-for="Input.FirstName" class="text-danger small"></span>
                        </div>
                        
                        <!-- Last Name Input -->
                        <div class="mb-3">
                            <label asp-for="Input.LastName" class="form-label fw-semibold text-dark small">
                                <i class="bi bi-person me-2" style="color: #4A47EE;"></i>Last Name
                            </label>
                            <input asp-for="Input.LastName" class="form-control rounded-pill px-3 border-2" 
                                   autocomplete="lastname" aria-required="true" 
                                   placeholder="Enter your last name"/>
                            <span asp-validation-for="Input.LastName" class="text-danger small"></span>
                        </div>
                        
                        <!-- Email Input -->
                        <div class="mb-3">
                            <label asp-for="Input.Email" class="form-label fw-semibold text-dark small">
                                <i class="bi bi-envelope me-2" style="color: #4A47EE;"></i>Email Address
                            </label>
                            <input asp-for="Input.Email" class="form-control rounded-pill px-3 border-2" 
                                   autocomplete="username" aria-required="true" 
                                   placeholder="Enter your email address"/>
                            <span asp-validation-for="Input.Email" class="text-danger small"></span>
                        </div>
                        
                        <!-- Password Inputs Side by Side -->
                        <div class="row mb-3">
                            <!-- Password Input -->
                            <div class="col-md-6 mb-3 mb-md-0">
                                <label asp-for="Input.Password" class="form-label fw-semibold text-dark small">
                                    <i class="bi bi-lock me-2" style="color: #4A47EE;"></i>Password
                                </label>
                                <div class="position-relative">
                                    <input asp-for="Input.Password" class="form-control rounded-pill px-3 pe-5 border-2" 
                                           autocomplete="new-password" aria-required="true" 
                                           placeholder="Create password" type="password" id="password-input"/>
                                    <button type="button" class="btn btn-link position-absolute top-50 end-0 translate-middle-y me-3 p-0" 
                                            onclick="togglePassword()">
                                        <i class="bi bi-eye text-muted" id="togglePassword" style="font-size: 1rem;"></i>
                                    </button>
                                </div>
                                <span asp-validation-for="Input.Password" class="text-danger small"></span>
                            </div>
                            
                            <!-- Confirm Password Input -->
                            <div class="col-md-6">
                                <label asp-for="Input.ConfirmPassword" class="form-label fw-semibold text-dark small">
                                    <i class="bi bi-lock-fill me-2" style="color: #4A47EE;"></i>Confirm
                                </label>
                                <div class="position-relative">
                                    <input asp-for="Input.ConfirmPassword" class="form-control rounded-pill px-3 pe-5 border-2" 
                                           autocomplete="new-password" aria-required="true" 
                                           placeholder="Confirm password" type="password" id="confirm-password-input"/>
                                    <button type="button" class="btn btn-link position-absolute top-50 end-0 translate-middle-y me-3 p-0" 
                                            onclick="toggleConfirmPassword()">
                                        <i class="bi bi-eye text-muted" id="toggleConfirmPassword" style="font-size: 1rem;"></i>
                                    </button>
                                </div>
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                            </div>
                        </div>
                        
                        <!-- Create Account Button -->
                        <button id="registerSubmit" type="submit" class="btn w-100 text-white fw-semibold mb-3 rounded-pill shadow" 
                                style="background: linear-gradient(135deg, #4A47EE, #764ba2); border: none; padding: 10px;">
                            <i class="bi bi-person-plus me-2"></i>Create Account
                        </button>

                        <!-- External Logins -->
                        @if ((Model?.ExternalLogins?.Count ?? 0) > 0)
                        {
                            <div class="text-center">
                                <div class="position-relative mb-3">
                                    <hr class="my-3">
                                    <span class="position-absolute top-50 start-50 translate-middle bg-white px-3 text-muted small">Or register with</span>
                                </div>
                                <div>
                                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model?.ReturnUrl" method="post"></form>
                                    <div class="d-flex flex-wrap justify-content-center gap-2">
                                        @foreach (var provider in Model.ExternalLogins!)
                                        {
                                            <button type="submit" form="external-account" class="btn btn-outline-secondary rounded-pill px-3 py-1 border-2 small" 
                                                    name="provider" value="@provider.Name" 
                                                    title="Register using your @provider.DisplayName account">
                                                <i class="bi bi-@provider.DisplayName.ToLower() me-2"></i>@provider.DisplayName
                                            </button>
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="text-center">
                                <div class="position-relative mb-3">
                                    <hr class="my-3">
                                    <span class="position-absolute top-50 start-50 translate-middle bg-white px-3 text-muted small">Already have an account?</span>
                                </div>
                                <p class="mb-0 text-dark small">Already a member? 
                                    <a asp-page="./Login" asp-route-returnUrl="@Model?.ReturnUrl" 
                                       class="text-decoration-none fw-semibold" style="color: #4A47EE;">
                                        Sign In
                                    </a>
                                </p>
                            </div>
                        }
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function togglePassword() {
            const passwordInput = document.getElementById('password-input');
            const toggleIcon = document.getElementById('togglePassword');
            
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                toggleIcon.classList.remove('bi-eye');
                toggleIcon.classList.add('bi-eye-slash');
                toggleIcon.style.color = '#4A47EE';
            } else {
                passwordInput.type = 'password';
                toggleIcon.classList.remove('bi-eye-slash');
                toggleIcon.classList.add('bi-eye');
                toggleIcon.style.color = '#6c757d';
            }
        }

        function toggleConfirmPassword() {
            const passwordInput = document.getElementById('confirm-password-input');
            const toggleIcon = document.getElementById('toggleConfirmPassword');
            
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                toggleIcon.classList.remove('bi-eye');
                toggleIcon.classList.add('bi-eye-slash');
                toggleIcon.style.color = '#4A47EE';
            } else {
                passwordInput.type = 'password';
                toggleIcon.classList.remove('bi-eye-slash');
                toggleIcon.classList.add('bi-eye');
                toggleIcon.style.color = '#6c757d';
            }
        }
    </script>
}